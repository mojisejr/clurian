generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  orchards      Orchard[]
  sessions      Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  idToken               String?
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verifications")
}

model Orchard {
  id        String        @id @default(uuid())
  ownerId   String
  name      String
  zones     Json          @default("[]")
  createdAt DateTime      @default(now()) @map("created_at")
  logs      ActivityLog[]
  owner     User          @relation(fields: [ownerId], references: [id])
  trees     Tree[]
  mixingFormulas MixingFormula[]

  @@map("orchards")
}

model Tree {
  id             String        @id @default(uuid())
  orchardId      String
  code           String
  zone           String
  type           String
  variety        String
  plantedDate    DateTime?     @map("planted_date") @db.Date
  status         TreeStatus
  replacedTreeId String?       @unique
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  logs           ActivityLog[]
  orchard        Orchard       @relation(fields: [orchardId], references: [id])
  replacedTree   Tree?         @relation("ReplantingHistory", fields: [replacedTreeId], references: [id])
  replacement    Tree?         @relation("ReplantingHistory")

  @@unique([orchardId, code], name: "orchard_code_unique")
  @@index([orchardId, status, zone])
  @@index([orchardId, status])
  @@map("trees")
}

model ActivityLog {
  id              String        @id @default(uuid())
  orchardId       String
  logType         LogType       @map("log_type")
  treeId          String?
  targetZone      String?       @map("target_zone")
  action          String
  note            String?
  performDate     DateTime      @map("perform_date") @db.Date
  status          LogStatus     @default(COMPLETED)
  followUpDate    DateTime?     @map("follow_up_date") @db.Date
  mixingFormulaId String?       @map("mixing_formula_id")
  createdAt       DateTime      @default(now()) @map("created_at")
  orchard         Orchard       @relation(fields: [orchardId], references: [id])
  tree            Tree?         @relation(fields: [treeId], references: [id])
  mixingFormula   MixingFormula? @relation(fields: [mixingFormulaId], references: [id])

  @@index([treeId, performDate(sort: Desc)])
  @@index([orchardId, performDate(sort: Desc)])
  @@index([orchardId, status, followUpDate])
  @@index([status, followUpDate])
  @@index([mixingFormulaId])
  @@map("activity_logs")
}

enum TreeStatus {
  HEALTHY
  SICK
  DEAD
  ARCHIVED
}

enum LogType {
  INDIVIDUAL
  BATCH
}

enum LogStatus {
  COMPLETED
  IN_PROGRESS
}

// --- Chemical Mixing Models ---

model MixingFormula {
  id          String         @id @default(cuid())
  orchardId   String?
  name        String
  description String?
  components  Json           // [{name, type, quantity, unit, step}]
  createdAt   DateTime       @default(now())
  usedCount   Int            @default(0)
  activities  ActivityLog[]

  orchard     Orchard?       @relation(fields: [orchardId], references: [id])

  @@map("mixing_formulas")
}
